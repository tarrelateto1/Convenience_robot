<?xml version="1.0"?>
<robot name="myrobot" 
    xmlns:xacro="https://www.ros.org/wiki/xacro">
    <xacro:include filename="$(find robot)/urdf/meterial.xacro" />
    <xacro:include filename="$(find robot)/urdf/inertial.xacro" />


    <material name="white">
        <color rgba="1 1 1 1"/>
    </material>

    <link name="base_link">
        <visual>
            <geometry>
                <cylinder length="0.3" radius="0.4"/>
            </geometry>
        </visual>
        <collision>
            <geometry>
                <cylinder length="0.3" radius="0.2"/>
            </geometry>
        </collision>
        <xacro:default_inertial mass="10"/>
    </link>
    <link name="right_wheel">
        <xacro:default_wheel_visual_collision reflect="0.3"/>
        <xacro:default_inertial mass="10" />

    </link>

    <link name="left_wheel">
        <xacro:default_wheel_visual_collision reflect="-0.3"/>
        <xacro:default_inertial mass="10"/>

    </link>

    <joint name="base_to_right_wheel" type="continuous">
        <parent link="base_link" />
        <child link="right_wheel" />
        <origin xyz="0 -0.2 0" />
        <axis xyz="0 1 0"/>
    </joint>

    <joint name="base_to_left_wheel" type="continuous">
        <parent link="base_link" />
        <child link="left_wheel" />
        <origin xyz="0 0.2 0" />
        <axis xyz="0 1 0"/>
    </joint>
    <transmission name="right_wheel_trans">
      <type>transmission_interface/SimpleTransmission</type>
      <actuator name="right_wheel_motor">
        <mechanicalReduction>1</mechanicalReduction>
      </actuator>
      <joint name="base_to_right_wheel">
        <hardwareInterface>VelocityJointInterface</hardwareInterface>
      </joint>
    </transmission>
    <transmission name="left_wheel_trans">
      <type>transmission_interface/SimpleTransmission</type>
      <actuator name="left_wheel_motor">
        <mechanicalReduction>1</mechanicalReduction>
      </actuator>
      <joint name="base_to_$left_wheel">
        <hardwareInterface>VelocityJointInterface</hardwareInterface>
      </joint>
    </transmission>

<gazebo>
    <plugin name="gazebo_ros_control" filename="libgazebo_ros_control.so">
      <robotNamespace>/</robotNamespace>
    </plugin>
  </gazebo>

  <gazebo reference="left_wheel">
      <mu1 value="200.0"/>
      <mu2 value="100.0"/>
      <kp value="10000000.0" />
      <kd value="1.0" />
      <material>Gazebo/Grey</material>
    </gazebo>
    <gazebo reference="right_wheel">
      <mu1 value="200.0"/>
      <mu2 value="100.0"/>
      <kp value="10000000.0" />
      <kd value="1.0" />
      <material>Gazebo/Grey</material>
    </gazebo>
</robot>